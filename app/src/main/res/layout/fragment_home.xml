<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:id="@+id/container">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
             <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:id="@+id/enter"
            android:textSize="40sp"
            android:fontFamily="@font/aclonica"
            android:textAllCaps="true"
            android:padding="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="20dp"
            android:id="@+id/women"
            android:layout_below="@id/enter"
            android:clickable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="25dp"
                android:text="Womens\nClothes"
                android:textSize="25sp"
                android:clickable="true" />
            <ImageView
                android:layout_width="210dp"
                android:layout_height="180dp"
                android:id="@+id/women_img"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-40dp"
                android:focusable="true"
                android:src="@drawable/women"
                android:clickable="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@id/women"
            android:id="@+id/men"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mens\nClothes"
                android:textSize="25sp"
                android:padding="5dp"
                android:layout_marginTop="25dp" />
            <ImageView
                android:layout_width="250dp"
                android:layout_height="176dp"
                android:id="@+id/men_img"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-40dp"
                android:layout_marginRight="0dp"
                android:src="@drawable/mens" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@id/men"
            android:id="@+id/children"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Children\nClothes"
                android:textSize="25sp"
                android:layout_marginTop="25dp" />

            <ImageView
                android:layout_width="210dp"
                android:layout_height="190dp"
                android:layout_alignParentRight="true"
                android:id="@+id/children_img"
                android:layout_marginTop="-40dp"
                android:src="@drawable/child" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>