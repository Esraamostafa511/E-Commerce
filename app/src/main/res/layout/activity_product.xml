<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/product"
    android:layout_height="match_parent"
    tools:context=".productActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/cart">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:gravity="center"
            android:padding="15dp"
            android:orientation="vertical"
            android:background="#EDEDED">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="300dp"
                android:layout_height="290dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:textColor="#121212"
                android:id="@+id/item_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:text="$ 34.0" />
            <TextView
                android:id="@+id/item_nam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:text="Woman T shirt">
            </TextView>
            <TextView
                android:id="@+id/item_cat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:text="Clothes">
            </TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Quntity"
        android:id="@+id/qun"
        android:layout_below="@id/cart"
        android:layout_marginLeft="80dp"></TextView>
    <Button
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/dic"
        android:text="-"
        android:textSize="35dp"
        android:padding="0dp"
        android:layout_below="@id/cart"
        android:layout_toRightOf="@id/qun"
        tools:ignore="MissingConstraints"></Button>
    <TextView
        android:id="@+id/quntity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:padding="10dp"
        android:layout_toRightOf="@id/dic"
        android:layout_below="@id/cart"
        android:textSize="30dp"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="0dp"></TextView>
    <Button
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/inc"
        android:text="+"
        android:textSize="30dp"
        android:padding="0dp"
        android:layout_below="@id/cart"
        android:layout_toRightOf="@id/quntity"
        tools:ignore="MissingConstraints">
    </Button>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:layout_below="@id/quntity"
        android:layout_marginTop="20dp"
        android:text="Status Of Product: "
        android:textSize="25dp">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quntity"
        android:id="@+id/status_of_item"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/status"
        android:text="Avialable"
        android:textSize="25dp">
    </TextView>
    <Button
        android:id="@+id/add_tocart_btn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="103dp"
        android:textSize="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Add To Cart"
        android:layout_below="@id/quntity"
        android:background="@drawable/button"
        android:textColor="#FBFAFA" />
</RelativeLayout>