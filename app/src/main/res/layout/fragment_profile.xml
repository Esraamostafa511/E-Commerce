<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".HomeActivity"
    android:id="@+id/container_profile">
        <TextView
            android:id="@+id/Sign_Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aclonica"
            android:text="Profile"
            android:textColor="#12C8DF"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="109dp"
            tools:layout_editor_absoluteY="43dp" />
        <TextView
            android:id="@+id/your_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Sign_Up"
            android:layout_marginTop="40dp"
            android:elevation="3dp"
            android:padding="15dp"
            android:textColor="#12C8DF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Name:">
        </TextView>
        <EditText
            android:id="@+id/Name"
            android:layout_width="470dp"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/prfile_txt"
            android:layout_below="@+id/Sign_Up"
            android:elevation="3dp"
            android:padding="15dp"
            app:layout_constraintWidth=".8"
            app:layout_constraintWidth_percent=".8"
            tools:layout_editor_absoluteX="31dp" />
        <TextView
            android:id="@+id/your_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:elevation="3dp"
            android:padding="15dp"
            android:textColor="#12C8DF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/your_name"
            android:text="Phone:">
        </TextView>
        <EditText
            android:id="@+id/phone"
            android:layout_width="470dp"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/prfile_txt"
            android:layout_below="@+id/Name"
            android:elevation="3dp"
            android:padding="15dp"
            android:inputType="phone"
            app:layout_constraintWidth=".8"
            app:layout_constraintWidth_percent=".8"
            tools:layout_editor_absoluteX="31dp"/>
        <TextView
            android:id="@+id/your_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:elevation="3dp"
            android:padding="15dp"
            android:textColor="#12C8DF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/your_phone"
            android:text="Location:">
        </TextView>
        <EditText
            android:id="@+id/location"
            android:layout_width="470dp"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/prfile_txt"
            android:layout_below="@+id/phone"
            android:elevation="3dp"
            android:padding="15dp"
            android:inputType="text"
            app:layout_constraintWidth=".8"
            app:layout_constraintWidth_percent=".8"
            tools:layout_editor_absoluteX="31dp" />

        <TextView
            android:id="@+id/your_birthdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:elevation="3dp"
            android:padding="15dp"
            android:textColor="#12C8DF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/your_location"
            android:text="Birth Date:">
        </TextView>
        <EditText
            android:id="@+id/birth"
            android:layout_width="470dp"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/prfile_txt"
            android:layout_below="@+id/location"
            android:elevation="3dp"
            android:padding="15dp"
            android:inputType="text"
            app:layout_constraintWidth=".8"
            app:layout_constraintWidth_percent=".8"
            tools:layout_editor_absoluteX="31dp" />

        <Button
            android:id="@+id/edit_btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/birth"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="103dp"
            android:textSize="22dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Edit Profile"
            android:background="@drawable/edit_btn"
            android:textColor="#FBFAFA" />
</RelativeLayout>